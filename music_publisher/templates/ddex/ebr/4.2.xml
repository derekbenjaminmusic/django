<?xml version="1.0" encoding="UTF-8"?>
<ern:NewReleaseMessage xmlns:ern="http://ddex.net/xml/ern/42"
                       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                       xsi:schemaLocation="http://ddex.net/xml/ern/42 http://ddex.net/xml/ern/42/release-notification.xsd"
                       LanguageAndScriptCode="en">
    <MessageHeader>
        <MessageId>{% now "c" %}</MessageId>
        <MessageSender>
            <PartyId>{{ sender_dpid }}</PartyId>
        </MessageSender>
        <MessageRecipient>
            <PartyId>{{ sender_dpid }}</PartyId>
        </MessageRecipient>
        <MessageCreatedDateTime>{% now "c" %}</MessageCreatedDateTime>
    </MessageHeader>
    <PartyList>
        <Party>
            <PartyReference>P0</PartyReference>
            <PartyName>
                <FullName>{{ publisher }}</FullName>
            </PartyName>
        </Party>
        {% for release in releases %}
            {{ release }}
            {% if release.label %}
                <Party>
                    <PartyReference>P{{ release.id }}-{{ release.label.code }}</PartyReference>
                    <PartyName>
                        <FullName>{{ release.label.name }}</FullName>
                    </PartyName>
                </Party>
            {% endif %}
            {% if release.artist %}
                <Party>
                    <PartyReference>P{{ release.id }}-{{ release.artist.code }}</PartyReference>
                    <PartyName>
                        <FullName>{% if release.artist.first_name %}{{ release.artist.first_name }} {% endif %}{{ release.artist.last_name }}</FullName>
                    </PartyName>
                </Party>
            {% endif %}
        {% endfor %}
        <Party>
            <PartyReference>PWarnerClassicsUK</PartyReference>
            <PartyName>
                <FullName>Warner Classics UK</FullName>
            </PartyName>
        </Party>
    </PartyList>
</ern:NewReleaseMessage>